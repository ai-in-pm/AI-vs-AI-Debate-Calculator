# OpenAI Configuration for Terrence (GPT-5)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=350
OPENAI_TEMPERATURE=0.2

# Anthropic Configuration for Neil (Claude 3.7 Sonnet)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=350
ANTHROPIC_TEMPERATURE=0.3

# Pacing Configuration
DEFAULT_PACE_MODE=slow
SLOW_MIN_TURN_SECONDS=2.0
SLOW_INTER_TURN_GAP_SECONDS=1.0
SLOW_TYPEOUT_RATE_CHARS_PER_SEC=45
SLOW_MAX_TOKENS_PER_TURN=350

MEDIUM_MIN_TURN_SECONDS=1.2
MEDIUM_INTER_TURN_GAP_SECONDS=0.6
MEDIUM_TYPEOUT_RATE_CHARS_PER_SEC=70
MEDIUM_MAX_TOKENS_PER_TURN=300

FAST_MIN_TURN_SECONDS=0.6
FAST_INTER_TURN_GAP_SECONDS=0.3
FAST_TYPEOUT_RATE_CHARS_PER_SEC=110
FAST_MAX_TOKENS_PER_TURN=250

# Debate Configuration
MAX_ROUNDS=12
JITTER_PERCENTAGE=0.15
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2.0

# Logging
LOG_LEVEL=INFO
TELEMETRY_ENABLED=true
